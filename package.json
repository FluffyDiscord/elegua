{
	"name": "elegua",
	"version": "1.0.4",
	"private": false,
	"homepage": "https://github.com/howesteve/elegua",
	"bugs": {
		"url": "https://github.com/howesteve/elegua/issues"
	},
	"scripts": {
		"dev": "echo Starting demo application... && vite dev",
		"build:page": "vite build --outDir build",
		"build:component": "svelte-package -i src/lib -o dist",
		"build": "pnpm run build:component;pnpm run build:component",
		"clean:page": "rm -fr page",
		"clean:dist": "rm -fr dist",
		"clean": "pnpm run clean:dist;pnpm run clean:page",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"publish": "pnpm publish --access public --no-git-checks",
		"release:pre": "wc -c src/lib/Elegua.svelte",
		"release": "pnpm run clean;pnpm run release:pre && pnpm run build && pnpm run publish"
	},
	"publishConfig": {
		"access": "public"
	},
	"prettier": {
		"singleQuote": true,
		"tabWidth": 2,
		"useTabs": true,
		"print-width": 120
	},
	"files": [
		"dist/**",
		"index.d.ts",
		"README.md",
		"CHANGELOG.md",
		"LICENSE"
	],
	"keywords": [
		"svelte",
		"route",
		"routing",
		"pwa"
	],
	"readme": "README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/howesteve/elegua"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/kit": "^1.20.4",
		"@sveltejs/package": "^2.0.2",
		"@sveltejs/vite-plugin-svelte": "^2.4.1",
		"@typescript-eslint/eslint-plugin": "^5.59.11",
		"@typescript-eslint/parser": "^5.59.11",
		"eslint": "^8.43.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^3.54.0",
		"svelte-check": "^3.4.3",
		"tslib": "^2.5.3",
		"typescript": "^5.1.3",
		"vite": "^4.3.9"
	},
	"dependencies": {
		"svelte": "^3.59.1"
	},
	"exports": {
		".": {
			"types": "./dist/Elegua.svelte.d.ts",
			"svelte": "./dist/Elegua.svelte"
		}
	},
	"type": "module"
}
